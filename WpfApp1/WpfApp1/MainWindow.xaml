<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kalkulačka" Height="480" Width="360" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Height="72" Margin="0,0,0,10" Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="8">
            <TextBlock x:Name="DisplayBlock"
                       FontSize="28"
                       VerticalAlignment="Center"
                       TextAlignment="Right"
                       Text="0"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="Vymazat" Click="Clear_Click" FontSize="16" Margin="4"/>
            <Button Grid.Row="0" Grid.Column="1" Content="←" Click="Backspace_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="0" Grid.Column="2" Content="%" Click="Operator_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="0" Grid.Column="3" Content="÷" Click="Operator_Click" FontSize="18" Margin="4"/>
         
            <Button Grid.Row="1" Grid.Column="0" Content="7" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="1" Grid.Column="3" Content="×" Click="Operator_Click" FontSize="18" Margin="4"/>

            <Button Grid.Row="2" Grid.Column="0" Content="4" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="2" Grid.Column="3" Content="−" Click="Operator_Click" FontSize="18" Margin="4"/>

            <Button Grid.Row="3" Grid.Column="0" Content="1" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Click="Digit_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Click="Operator_Click" FontSize="18" Margin="4"/>

            <Button Grid.Row="4" Grid.Column="0" Content="0" Click="Digit_Click" FontSize="18" Margin="4" Grid.ColumnSpan="2"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Click="Decimal_Click" FontSize="18" Margin="4"/>
            <Button Grid.Row="4" Grid.Column="3" Content="=" Click="Equals_Click" FontSize="18" Margin="4"/>
        </Grid>
    </Grid>
</Window>
